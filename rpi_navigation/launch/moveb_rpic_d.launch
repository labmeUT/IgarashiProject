<launch>
  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_local_planner" value="$(arg base_local_planner)"/>  
    <rosparam file="$(find rpi_navigation)/config_c/planner.yaml" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find rpi_navigation)/config_d/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rpi_navigation)/config_d/costmap_common.yaml" command="load" ns="local_costmap" />

    <!-- local costmap, needs size -->
    <rosparam file="$(find rpi_navigation)/config_d/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find rpi_navigation)/config_d/costmap_global.yaml" command="load" ns="global_costmap" />
    <param name="global_costmap/width" value="100.0" />
    <param name="global_costmap/height" value="100.0" />
  </node>

  <node pkg="rpi_navigation" type="rpi_control3.py" name="rpi_control" output="screen">
  </node>

</launch>
